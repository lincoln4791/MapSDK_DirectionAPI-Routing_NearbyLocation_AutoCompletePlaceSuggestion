<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <EditText
        android:id="@+id/et_origin_distanceMatrix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start From"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    <fragment
            android:id="@+id/autocomplete_fragment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />-->


    <EditText
        android:id="@+id/et_destination_distanceMatrix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End To"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_origin_distanceMatrix" />


    <fragment
        android:id="@+id/map_DstanceMatrix"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_destination_distanceMatrix" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_spinner_DistanceMatrix"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <Spinner
            android:id="@+id/spinner_DistanceMatrix"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/cv_spinner_DistanceMatrix"
        app:layout_constraintEnd_toEndOf="@id/cv_spinner_DistanceMatrix"
        app:layout_constraintTop_toBottomOf="@id/cv_spinner_DistanceMatrix">
        <ImageView
            android:id="@+id/iv_searchNearbyLocations_DistanceMatrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_search_24"
            />
    </com.google.android.material.card.MaterialCardView>




    <ImageView
        android:id="@+id/iv_pin_DistanceMatrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:src="@drawable/marker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/map_DstanceMatrix"
        app:layout_constraintTop_toBottomOf="@+id/et_destination_distanceMatrix"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_distance_DistanceMatrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="distance"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_dropPin_DistanceMatrix"
        app:layout_constraintStart_toEndOf="@+id/btn_distance_DistanceMatrix" />


    <Button
        android:id="@+id/btn_distance_DistanceMatrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="distance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_dropPin_DistanceMatrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Drop Pin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_Route_DistanceMatrix"
        app:layout_constraintTop_toTopOf="@+id/btn_Route_DistanceMatrix" />


    <Button
        android:id="@+id/btn_Route_DistanceMatrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Route"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_distance_DistanceMatrix" />


</androidx.constraintlayout.widget.ConstraintLayout>